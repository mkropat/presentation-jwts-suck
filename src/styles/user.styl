bgcolor = #FFD462

.bgimg
  background-size contain
  background-repeat no-repeat
  background-position center

.intro
  @extend .bgimg
  background-image url('../images/kalahari.jpg')

.cookies
  @extend .bgimg
  background-image url('../images/cookie-monster.jpg')

.rainbows
  @extend .bgimg
  background-image url('../images/kittens-and-rainbows.jpg')

.bespoke-slide
  background-color bgcolor
  color #3F0B1B

.box
  background-color bgcolor
  color #3F0B1B
  padding 0 30px 5px 25px
  display flex
  flex-direction column
  align-items center
  justify-content center

.caption
  background-color bgcolor
  padding 5px 10px
  position absolute
  top 20px

.anchor
  position relative

.right
  position absolute
  left 100%
  width 500px

.large
  font-size 2.5em
  width 80%
  text-align center

.portrait
  height 80%

.landscape
  width 80%

.serious
  text-align center
  font-weight bold

ul
  max-width 80%
